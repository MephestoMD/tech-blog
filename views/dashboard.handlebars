{{#if posts}}
<div class = "post-space">
{{#each posts as |post|}}

    <div class="card post-card">
    <h5 class="card-header"><a class="post-title" href = "/comment">{{post.title}}</a> <span class = "post-attribution"> Created by: <span class = "user-info">{{post.user.username}}</span> 
    <br> On: <span class = "user-info"> {{format_date post.createdAt}}</span></span>
    </h5>
    <div class="card-body">
        <p class="card-text">{{post.content}}</p>
    </div>
    </div>

    {{#if post.comments.length}}
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target=".multi-collapse{{post.id}}" aria-expanded="false" aria-controls="collapseExample">
    Expand {{comments.length}} comments
    </button>
     {{#each comments}}
    <div class="collapse multi-collapse{{post.id}}" id="{{post.id}}">
    <div class="card card-body" id="comment-card">
        <span id= "comment">{{this.content}}</span>
        <span id="commenter">Left by: {{this.user.username}}</span>
        <span id="commentedAt">{{format_dateSpec this.createdAt}}</span>
    </div>
    </div>
    {{/each}}
    {{/if}}  

{{/each}}
</div>
{{/if}}