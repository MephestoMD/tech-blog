<form id = "create-post-form">
  <div class="form-group">
    <label for="titleInput">Post Title</label>
    <input type="text" class="form-control" id="title-input" placeholder="Enter a descriptive title for your post here">
  </div>

  <div class="form-group">
    <label for="Textarea">Post Content</label>
    <textarea class="form-control" id="text-area" rows="3" placeholder="What's on your mind?"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<script src="./js/post.js"></script>