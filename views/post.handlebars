<h5 class="card-header" id = "post-header">Create a Post</h5>
<form id = "create-post-form">
  <div class="form-group">
    <label for="titleInput">Post Title</label>
    <input type="text" class="form-control" id="title-input" placeholder="Enter a descriptive title for your post here">
  </div>

  <div class="form-group">
    <label for="Textarea">Post Content</label>
    <textarea class="form-control" id="text-area" rows = "8" placeholder="What's on your mind?"></textarea>
  </div>
  <button type="submit" class="btn btn-primary bg-dark">Submit</button>
</form>

<script src="./js/post.js"></script>